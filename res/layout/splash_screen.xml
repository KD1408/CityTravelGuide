<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFD700">

    <ImageView
        android:id="@+id/ImageView06"
        android:layout_width="50dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/ImageView05"
        android:layout_height="120dp"
        android:src="@drawable/tree1" />

    <ImageView
        android:id="@+id/ImageView05"
        android:layout_width="50dp"
        android:layout_height="120dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/ImageView02"
        android:src="@drawable/tree1" />

    <ImageView
        android:id="@+id/ImageView01"
        android:layout_width="50dp"
        android:layout_height="120dp"
        android:layout_centerVertical="true"
        android:src="@drawable/tree1" />

    <ImageView
        android:id="@+id/ImageView02"
        android:layout_width="50dp"
        android:layout_height="120dp"
        android:layout_alignTop="@+id/ImageView01"
        android:layout_marginTop="18dp"
        android:layout_toRightOf="@+id/ImageView01"
        android:src="@drawable/tree3" />

    <ImageView
        android:id="@+id/ImageView04"
        android:layout_width="50dp"
        android:layout_height="120dp"
        android:layout_alignTop="@+id/ImageView02"
        android:layout_toRightOf="@+id/ImageView06"
        android:src="@drawable/tree3" />

    <ImageView
        android:id="@+id/ImageView03"
        android:layout_width="50dp"
        android:layout_height="120dp"
        android:layout_alignTop="@+id/ImageView04"
        android:layout_toRightOf="@+id/ImageView04"
        android:src="@drawable/tree3" />
    
    <ImageView
        android:id="@+id/ImageView07"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/bus1" />
   
    
    <ImageView
        android:id="@+id/ImageView08"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_below="@+id/ImageView07"
        android:src="@drawable/road" />
    
    
    <ImageView
        android:id="@+id/ImageView09"
        android:layout_below="@+id/ImageView08"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ctg" />
    
</RelativeLayout>